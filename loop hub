local Rayfield = loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Rayfield/main/source'))()

local username = game.Players.LocalPlayer.Name

local Window = Rayfield:CreateWindow({
	Name = "Loop Hub - Welcome to "..username,
	LoadingTitle = "사용 해주셔서 감사합니다",
	LoadingSubtitle = "by Loop",
	ConfigurationSaving = {
		Enabled = true,
		FolderName = "Loop Shop is King",
		FileName = "Loop Hub"
	},
	KeySystem = true, -- Set this to true to use their key system
	KeySettings = {
		Title = "Loop Hub",
		Subtitle = "Key System",
		Note = "LOOP 에게 키를 받으세요",
		SaveKey = true,
		Key = "loopshopisbest"
	}
})


local main = Window:CreateTab("Main Script", 6022668935) -- Title, Image
local Section = main:CreateSection("Main Script")

local Dropdown = main:CreateDropdown({
	Name = "Game Script",
	Options = {"블피","어빌리티워즈", "어원피", "킹피"},
	CurrentOption = "스크립트를 선택해주세요",
	Flag = "Dropdown1", -- A flag is the identifier for the configuration file, make sure every element has a different flag if you're using configuration saving to ensure no overlaps
	Callback = function(Option)
		if Option == "블피" then
			loadstring(game:HttpGet("https://raw.githubusercontent.com/xQuartyx/DonateMe/main/OldBf"))() end
		if Option == "어빌리티워즈" then
			loadstring(game:HttpGet("https://raw.githubusercontent.com/Sw1ndlerScripts/RobloxScripts/main/AbilityWars.lua"))() end
		if Option == "어원피" then
			getgenv().autoExecuteFolder = true loadstring(game:HttpGet('https://www.6footscripts.com/Scripts/6FootHub/Hub.lua'))(); end
		if Option == "킹피" then
			loadstring(game:HttpGet("https://raw.githubusercontent.com/PainfulDestroyer/Roblox/main/King%20Legacy"))() end
	end,
})
local Label = main:CreateLabel("2023-02-18 황구님의 의뢰로 업데이트 완료")


local playerset = Window:CreateTab("Player", 6022668887) -- Title, Image

local Slider = playerset:CreateSlider({
	Name = "Player Speed",
	Range = {16, 100},
	Increment = 1,
	Suffix = "Speed",
	CurrentValue = 16,
	Flag = "Slider1", -- A flag is the identifier for the configuration file, make sure every element has a different flag if you're using configuration saving to ensure no overlaps
	Callback = function(speed)
	 game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = speed
	end,
 })

 local Slider = playerset:CreateSlider({
	Name = "Player Jump Power",
	Range = {10, 300},
	Increment = 1,
	Suffix = "Power",
	CurrentValue = 10,
	Flag = "Slider1", -- A flag is the identifier for the configuration file, make sure every element has a different flag if you're using configuration saving to ensure no overlaps
	Callback = function(power)
	 game.Players.LocalPlayer.Character.Humanoid.JumpPower = power
	end,
 })

local setting = Window:CreateTab("Setting", 6031280882) -- Title, Image

local Section = setting:CreateSection("Section Example")

local Button = setting:CreateButton({
	Name = "Destroy UI",
	Callback = function()
		Rayfield:Destroy()
	end,
})

